@{
    ViewBag.Title = "Giriş Sayfası";
}
<link href="~/Content/login-register.css" rel="stylesheet" />

@* submit işlemi yapacağı için formun içine alıyoruz *@
@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Yönlendiriliyorsunuz.</h1>
                </div>
                <div class="main-content">
                    <div class="text-success">
                        <h2><span class="glyphicon glyphicon-ok"></span>     Kayıt oldunuz</h2>
                        <hr />
                        <p class="text-justify">
                            Lütfen eposta adresinize gönderdiğimiz aktivasyon linkine tıklayarak hesabınızı aktive ediniz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script>

    $(function () {

        $("footer").parent().hide();

        setTimeout(function () {

            window.location = "/Home/Index";
        }, 10000);

    });

</script>